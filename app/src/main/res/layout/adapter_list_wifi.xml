<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_52sdp"
    android:background="@drawable/border_item_wifi"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/adapter_wifi_iv__icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_10sdp"
        android:src="@drawable/ic_level_wifi_4"
        android:layout_marginStart="@dimen/_10sdp" />

    <com.binhdz.wifibooster.view.MyTextView
        android:id="@+id/adapter_wifi_tv__name_wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/adapter_wifi_iv__icon"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_toEndOf="@+id/adapter_wifi_iv__icon"
        android:layout_toRightOf="@+id/adapter_wifi_iv__icon"
        android:singleLine="true"
        android:text="@string/name_wifi"
        android:textColor="@color/color_black"
        android:textSize="13sp"
        android:layout_marginStart="@dimen/_10sdp" />

    <ImageView
        android:id="@+id/adapter_wifi_iv__ckeck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:src="@drawable/ic_ckeck"
        android:visibility="gone"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_10sdp" />
</RelativeLayout>
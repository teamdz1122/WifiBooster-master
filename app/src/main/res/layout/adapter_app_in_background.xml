<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_55sdp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/adapter_app_in_background__iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/adapter_wifi_tv__name_wifi"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:src="@drawable/ic_level_wifi_connect_4"
         />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <com.binhdz.wifibooster.view.MyTextView
            android:id="@+id/adapter_app_in_background__tv_name_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/name_wifi"
            android:textColor="@color/color_black"
            android:textSize="14sp" />

        <com.binhdz.wifibooster.view.MyTextView
            android:id="@+id/adapter_app_in_background__tv_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:singleLine="true"
            android:text="@string/name_wifi"

            android:textSize="14sp" />
    </LinearLayout>

    <com.binhdz.wifibooster.view.MyTextView
        android:id="@+id/adapter_app_in_background__tv_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/adapter_wifi_tv__name_wifi"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_5sdp"

        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/border_text_stop"
        android:text="@string/stop"
        android:textColor="@color/color_while"
        android:textSize="15sp"
        android:visibility="visible"
        tools:ignore="ObsoleteLayoutParam">
    </com.binhdz.wifibooster.view.MyTextView>

</LinearLayout>
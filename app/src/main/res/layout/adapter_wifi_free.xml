<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_50sdp"
    android:background="@drawable/border_item_wifi"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/adapter_wifi_free_iv__icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/adapter_wifi_tv__name_wifi"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:src="@drawable/ic_level_wifi_connect_4" />

    <LinearLayout
        android:id="@+id/adapter_wifi__ly_content"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <com.binhdz.wifibooster.view.MyTextView
            android:id="@+id/adapter_wifi_free_tv__name_wifi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"

            android:text="@string/name_wifi"
            android:textColor="@color/color_black"
            android:textSize="14sp" />

        <com.binhdz.wifibooster.view.MyTextView
            android:id="@+id/adapter_wifi_free_tv__name_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:singleLine="true"
            android:text="@string/name_safe"

            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/adapter_wifi_free_iv__ckeck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/adapter_wifi_tv__name_wifi"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:src="@drawable/ic_ckeck"
        android:visibility="gone"
        tools:ignore="ObsoleteLayoutParam" />


    <ImageView
        android:id="@+id/adapter_wifi_free_iv__menu"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/adapter_wifi_tv__name_wifi"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_adapter_menu"
        tools:ignore="ObsoleteLayoutParam" />

</LinearLayout>
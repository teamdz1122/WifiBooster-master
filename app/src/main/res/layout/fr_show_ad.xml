<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:background="#F5F5F5"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:id="@+id/ly_ad_top"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/ly_ad__icon"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:src="@drawable/ic_check_connect_fail"
            android:layout_marginStart="@dimen/_15sdp" />

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">
            <com.binhdz.wifibooster.view.MyTextViewBold
                android:id="@+id/ly_ad__tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:text="@string/check_connect_fail"
                android:textColor="@color/color_black"
                android:textSize="20sp"
                android:layout_marginStart="10dp" />

            <com.binhdz.wifibooster.view.MyTextView
                android:id="@+id/ly_ad__tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/_3sdp"
                android:text="@string/ckeck_conenct_fail_des"
                android:textSize="14sp"
                android:layout_marginStart="10dp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="#FFFFFF"
        android:id="@+id/ly_ad__native"
        android:orientation="horizontal">

        <com.google.android.gms.ads.NativeExpressAdView
            android:id="@+id/ly_ad__adview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ads:adSize="SMART_BANNER"
            ads:adUnitId="ca-app-pub-9569615767688214/5083951357" />

    </LinearLayout>
</LinearLayout>